{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <h1  class="text-muted">Liste des utilisateurs</h1>

    <br>

    <div id="utilisateur" class="table-responsive-xl">
    <table class="table table-hover">
        <thead>
        <tr>

            <th>Pseudo</th>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Téléphone</th>
            <th>Email</th>
            <th>Ville de rattachement</th>
            <th> Rôle de l'utilisateur</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                {% if user.pseudo is null %}
                    <td>X</td>
                {% else %}
                    <td>{{ user.pseudo }}</td>
                    {% endif %}
                {% if user.prenom is null %}
                    <td>X</td>
                {% else %}
                    <td>{{ user.prenom }}</td>
                {% endif %}
                {% if user.nom is null %}
                    <td>X</td>
                {% else %}
                    <td>{{ user.nom }}</td>
                {% endif %}
                {% if user.telephone is null %}
                    <td>X</td>
                {% else %}
                    <td>{{ user.telephone }}</td>
                {% endif %}
                {% if user.email is null %}
                    <td>X</td>
                {% else %}
                    <td>{{ user.email }}</td>
                {% endif %}
                {% if user.site is null %}
                    <td>X</td>
                {% else %}
                    <td>{{ user.site }}</td>
                {% endif %}
                <td>{{ user.roles | json_encode }}</td>
                <td>
                    <div class="d-inline-block">
                        <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-success">
                            <img alt="plus" class="plus" src="{{ asset('build/images/update.svg') }}"></a>
                    </div>
                    <div class="d-inline-block">
                        {{ include('user/_delete_form.html.twig') }}
                    </div>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="9">Oups ! Aucun utilisateur trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_register') }}" class="bouton">
        <img alt="plus" class="plus" src="{{ asset('build/images/add.svg') }}"> Ajouter un utilisateur
    </a>

    </div>

{% endblock %}
