<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Accueil{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link href="https://fonts.googleapis.com/css?family=Comfortaa|Play&display=swap" rel="stylesheet">
    {{ encore_entry_link_tags('app') }}
</head>
<body>
<div class="container-fluid" id="containerNav">
    <header>
        <nav class="navbar navbar-expand-md bg-dark navbar-dark">
            <!-- Brand -->
            <div  id="logo">
                <a class="navbar-brand scroll" href="../"><img alt="logo" class="img-fluid"
                                                               src="{{ asset('build/images/iconebar.svg') }}">
                <span><strong>Sortir</strong>.com | </span></a>
            </div>

            <!-- Bouton responsive -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Liens -->
            <div class="collapse navbar-collapse " id="collapsibleNavbar">
                {% if app.user %}
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link nav-link-color" href="{{ path('ville_index') }}">Villes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-color" href="{{ path('site_index') }}">Sites</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-color" href="{{ path('user_index') }}">Utilisateurs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-color" href="{{ path('lieu_index') }}">Lieux</a>
                    </li>
                    {% endif %}
                    {% if app.user is null  %}
                        <li class="nav-item">
                            <a class="nav-link nav-link-color" href="{{ path('app_login') }}">Connexion</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-color" href="{{ path('app_register') }}">Inscription</a>
                        </li>
                    {% endif %}
                    {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link nav-link-color" href="{{ path('sortie_index') }}">Accueil</a>
                    </li>

                        <li class="nav-item utilisateur">
                            {% if app.user.img is empty %}
                                <a><img alt="logo" class="avatarPetit" src="{{ asset('build/images/iconebar.svg') }}"></a>
                            {% else %}
                                <img alt="logo" class="avatarPetit" src="{{ asset('uploads/photos/') }}{{ app.user.img }}">
                            {% endif %}
                            <a class="nav-link nav-link-color scroll" href="{{ url('user_show', { 'id' : app.user.id} )}}">
                                Bonjour <strong>{{ app.user.pseudo }}</strong> !
                            </a>
                            <a class="nav-link nav-link-color scroll" href="{{ path('app_logout') }}">
                                <img alt="logout" class="logout"  src="{{ asset('build/images/cancel.svg') }}">
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>
    </header>
</div>
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
    {% block body %}
    {% endblock %}
    {% block javascripts %}{% endblock %}
<br><br><br>
<footer class="page-footer font-small blue" >
    <div class="container">

        <!-- Call to action -->
        <ul class="list-unstyled list-inline text-center py-2">
            <li class="list-inline-item">
                <a href="#" class="btn btn-outline-white btn-rounded "data-toggle="modal" data-target="#confidence">La politique de confidentialité</a>
            </li>
            <li class="list-inline-item">
                <a href="#" class="btn btn-outline-white btn-rounded">CGU</a>
            </li>
            <li class="list-inline-item">
                <a href="#" class="btn btn-outline-white btn-rounded">Contact</a>
            </li>
            <li class="list-inline-item">
                <a href="#" class="btn btn-outline-white btn-rounded">Qui sommes nous ?</a>
            </li>
        </ul>
        <!-- Call to action -->

    </div>

    <!-- Copyright -->
    <div class="footer-copyright text-center py-3 ">© 2019 Copyright:
        <a href="{{ path('sortie_index') }}"> Sortir.com</a>
    </div>
    <!-- Copyright -->

</footer>

<!-- Modal -->
<div class="modal fade" id="confidence" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Politique de confidentialité</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>






</body>

{{ encore_entry_script_tags('app') }}
</html>