{% extends 'base.html.twig' %}

{% block title %}Créer un site{% endblock %}

{% block body %}
    <h1 class="text-muted">Créer un site</h1>

    <div class="container-fluid">
        <div class="row">
            <div class="col-6">
                {{ form_start(form) }}
                {{ form_label(form.nom)}}
                {{form_widget(form.nom, {'attr': {'class':'form-control'}})}}
                {{ form_errors(form.nom) }}

            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-4">
            {{ form_widget(form.submitt) }}
            </div>
            <div class="col-8">
                <a href="{{ path('site_index') }}"><button class="btn bouton">Retour à la liste</button></a>
                {{ form_end(form) }}
            </div>
        </div>

    </div>


{% endblock %}
