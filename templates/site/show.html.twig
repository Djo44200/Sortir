{% extends 'base.html.twig' %}

{% block title %}Site{% endblock %}

{% block body %}
    <br>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card border-success mb-3" style="max-width: 18rem;">
                    <div class="card-header bg-transparent border-success text-muted text-center">Site N° {{ site.id }}</div>
                    <div class="card-body text-success">
                        <h5 class="card-title">Site de {{ site.nom }}</h5>
                        <p class="card-text"></p>
                    </div>
                    <div class="card-footer bg-transparent border-success">
                        <div class="d-inline-block align-items-center">
                            <a href="{{ path('site_edit', {'id': site.id}) }}" class="btn btn-success">
                                <img alt="plus" class="plus" src="{{ asset('build/images/update.svg') }}"></a>
                            <div class="d-inline-block">
                                <form method="post" action="{{ path('site_delete', {'id': site.id}) }}"
                                      onsubmit="return confirm('Êtes vous sur de vouloir supprimer ce site ?');">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ site.id) }}">
                                    <button class="btn btn-danger"><img alt="plus" class="plus"
                                                                        src="{{ asset('build/images/close.svg') }}">
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-auto">
                    <a href="{{ path('ville_index') }}">
                        <button class="btn bouton ">Retour à la liste</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
