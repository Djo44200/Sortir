{% extends 'base.html.twig' %}

{% block title %}Nouvelle inscription{% endblock %}

{% block body %}
    <h1 class="text-muted">Nouvelle inscription</h1>


    <div class="container-fluid">
        <div class="row">
            <div class="col-6">
                {{ form_start(form) }}

                {{ form_label(form.dateInscription)}}
                {{form_widget(form.dateInscription, {'attr': {'class':'form-control'}})}}
                {{ form_errors(form.dateInscription) }}

                {{ form_label(form.participant)}}
                {{form_widget(form.participant, {'attr': {'class':'form-control'}})}}
                {{ form_errors(form.participant) }}

                {{ form_label(form.sortie)}}
                {{form_widget(form.sortie, {'attr': {'class':'form-control'}})}}
                {{ form_errors(form.sortie) }}

            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-4">
                {{form_widget(form.submit)}}
            </div>
            {{ form_end(form) }}
            <div class="col-8">
