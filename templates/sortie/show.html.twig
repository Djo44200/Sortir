{% extends 'base.html.twig' %}

{% block title %}Sortie{% endblock %}

{% block body %}
    <h1 class="text-muted">{{ sortie.nom }}</h1>
    <br>
    <div class="container-fluid">
        <div class="row">
            <div class="col-6">
                <div class="card border-success mb-3" style="max-width: 30rem;">
                    <div class="card-header bg-transparent border-success text-muted text-center">Date et heure de la sortie : {{ sortie.dateDebut ? sortie.dateDebut|date('d/m/Y H:i') : '' }}</div>
                    <div class="card-body text-success">
                        <p class="card-text"> <u>Date limite de l'inscription </u>: <strong>{{ sortie.dateCloture ? sortie.dateCloture|date('d/m/Y H:i') : '' }}</strong></p>
                        <p class="card-text"> <u>Nombre de places </u>: <strong>{{ sortie.nbInscriptionsMax }}</strong></p>
                        <p class="card-text"> <u>Durée </u>: <strong>{{ sortie.duree }} minutes</strong></p>
                        <p class="card-text"> <u>Description et infos </u>: <strong>{{ sortie.descriptionInfos }}</strong></p>
                        <p class="card-text"> <u>Ville Organisatrice </u>: <strong>{{ sortie.site.nom }}</strong></p>
                        <p class="card-text"> <u>Lieu </u>: <strong>{{ sortie.lieu.nomLieu }}</strong></p>
                        <p class="card-text"> <u>Rue </u>: <strong>{{ sortie.lieu.rue }}</strong></p>
                        <p class="card-text"> <u>Code Postal </u>: <strong>{{ sortie.lieu.ville.codePostal }}</strong></p>
                        <p class="card-text"> <u>Latitude </u>: <strong>{{ sortie.lieu.latitude }}</strong></p>
                        <p class="card-text"> <u>Longitude </u>: <strong> {{ sortie.lieu.longitude }}</strong></p>
                    </div>
                    <div class="card-footer bg-transparent border-success">
                        <div class="d-inline-block align-items-center">
                            <a href="{{ path('sortie_edit', {'id': sortie.id}) }}" class="btn btn-success">
                                <img alt="plus" class="plus" src="{{ asset('build/images/update.svg') }}"></a>
                            <div class="d-inline-block">
                                <form method="post" action="{{ path('sortie_delete', {'id': sortie.id}) }}"
                                      onsubmit="return confirm('Êtes vous sur de vouloir supprimer cette sortie ?');">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sortie.id) }}">
                                    <button class="btn btn-danger"><img alt="plus" class="plus"
                                                                        src="{{ asset('build/images/close.svg') }}">
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6">

                {% if listeParticipant|length >0 %}
                    <div class="table-responsive">
                        <table class="table">
                            <thead>

                            <tr>
                                <th>Pseudo</th>
                                <th>Nom</th>
                            </tr>
                            </thead>

                            {% for Inscription in listeParticipant %}

                                <tr>
                                    <td>{{ Inscription.participant.pseudo }}</td>
                                    <td>{{ Inscription.participant.nom }} {{ Inscription.participant.prenom }}</td>
                                    <td>{{ Ad.cp }}</td>
                                    <td>{{ Ad.prix }} €</td>
                                    <td>{{ Ad.categorie.getLibelle() }}</td>
                                    <td>{{ Ad.dateCreation | date('d/m/Y') }}
                                        à {{ Ad.dateCreation | date('H:i:s', "Europe/Paris") }}</td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                {% endif %}

            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-auto align-items-center">
            <a href="{{ path('ville_index') }}">
                <button class="btn bouton ">Retour à la liste</button>
            </a>
        </div>
    </div>
{% endblock %}