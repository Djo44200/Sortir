{% extends 'base.html.twig' %}

{% block title %}Sortie index{% endblock %}

{% block body %}
    <h1>Sortie index</h1>

    <div class="jour">Date du jour : {{ date('now') | date('d/m/Y') }}</div>
<br>

<div class="container">
    <div class="form-group ">
        <div class="row">
            <div class="col-6">
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Site
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="{{ path('sortie_index') }}">TOUTES</a>
                        {% for Site in ListeSite %}
                            <a class="dropdown-item" href="{{ path('sortie_index') }}?site={{ Site.id }}">{{ Site.nom }}</a>
                        {% endfor %}
                    </div>
                </div>
            </div>
    {% if sorties%}

    <table class="table">
        <thead>
            <tr>
                <th>Nom de la sortie</th>
                <th>Date de la sortie</th>
                <th>Clôture</th>
                <th>Inscris/Places</th>
                <th>Etat</th>
                <th>Inscris</th>
                <th>Organisateur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.dateDebut ? sortie.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sortie.dateCloture ? sortie.dateCloture|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sortie.nbInscriptions }}/{{ sortie.nbInscriptionsMax }}</td>
                <td>
                    {% if sortie.etat == 'CRE' %}
                    En création
                    {% elseif sortie.etat == 'OUV' %}
                    Ouverte
                    {% elseif sortie.etat == 'ENC' %}
                    En cours
                    {% elseif sortie.etat == 'PAS' %}
                    Passée
                    {% elseif sortie.etat == 'ANN' %}
                    Fermée
                {% endif %}
                </td>
                <td>
                    {% if sortie.estInscris(app.user) %}
                    {{ X }}
                    {% endif %}
                </td>
                <td>{{ sortie.organisateur }}</td>
                <td>
                    <a href="{{ path('sortie_show', {'id': sortie.id}) }}">show</a>
                    <a href="{{ path('sortie_edit', {'id': sortie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endif %}
    <a href="{{ path('sortie_new') }}">Create new</a>
        </div>
    </div>
</div>
{% endblock %}
