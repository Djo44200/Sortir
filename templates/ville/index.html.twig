{% extends 'base.html.twig' %}

{% block title %}Ville index{% endblock %}

{% block body %}
    <h1 class="text-muted">Liste des villes</h1>
    <nav class="navbar navbar-light bg-light">
        <form class="form-inline" action="{{ path('ville_recherche') }}" method="GET">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Recherche</button>
        </form>
    </nav>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>CodePostal</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ville in villes %}
            <tr>
                <td>{{ ville.id }}</td>
                <td>{{ ville.nom }}</td>
                <td>{{ ville.codePostal }}</td>
                <td>
                    <a href="{{ path('ville_edit', {'id': ville.id}) }}"class="btn btn-success">
                        <img alt="plus" class="plus" src="{{ asset('build/images/update.svg') }}"></a>
                    <div class="d-inline-block">
                        <form method="post" action="{{ path('ville_delete', {'id': ville.id}) }}"
                              onsubmit="return confirm('Êtes vous sur de vouloir supprimer cette ville ?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ville.id) }}">
                            <button class="btn btn-danger"><img alt="plus" class="plus"
                                                                src="{{ asset('build/images/close.svg') }}">
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Oups ! Aucune ville trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <a href="{{ path('ville_new') }}"><button class="btn bouton">Créer une ville</button></a>
{% endblock %}
