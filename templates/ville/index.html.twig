{% extends 'base.html.twig' %}

{% block title %}Liste des villes{% endblock %}

{% block body %}
    <h1 class="text-muted">Liste des villes</h1>

    <div id="path_adrVille" data-path="{{ path('ville_recherche') }}"></div>
    <h3>Filtrer les villes</h3>

    <form id="rechercheDeVille">
        <div class="d-inline-block">
            <input type="text" name="recherche" class="form-control" id="rechercher">
        </div>
        <div class="d-inline-block">

        </div>
    </form>
    <br>

    <div id="resultat">
        {% if rechercher is defined %}
        <div class="text-center table-responsive">
            <table class="table ">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Code Postal</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for ville in listeVilles %}
                    <tr>
                        <td>{{ ville.id }}</td>
                        <td>{{ ville.nom }}</td>
                        <td>{{ ville.codePostal }}</td>
                        <td>
                            <div class="d-inline-block">
                                <a href="{{ path('ville_show', {'id': ville.id}) }}" class="btn btn-primary">
                                    <img alt="plus" class="plus" src="{{ asset('build/images/look.svg') }}"></a>
                            </div>
                            <div class="d-inline-block">
                                <a href="{{ path('ville_edit', {'id': ville.id}) }}" class="btn btn-success">
                                    <img alt="plus" class="plus" src="{{ asset('build/images/update.svg') }}"></a>
                            </div>
                            <div class="d-inline-block">
                                {{ include('ville/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            {% else %}
            <div class="text-center table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Code Postal</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ville in villes %}
                        <tr>
                            <td>{{ ville.id }}</td>
                            <td>{{ ville.nom }}</td>
                            <td>{{ ville.codePostal }}</td>
                            <td>
                                <div class="d-inline-block">
                                    <a href="{{ path('ville_show', {'id': ville.id}) }}" class="btn btn-primary">
                                        <img alt="plus" class="plus" src="{{ asset('build/images/look.svg') }}"></a>
                                </div>
                                <div class="d-inline-block">
                                    <a href="{{ path('ville_edit', {'id': ville.id}) }}" class="btn btn-success">
                                        <img alt="plus" class="plus" src="{{ asset('build/images/update.svg') }}"></a>
                                </div>
                                <div class="d-inline-block">
                                    {{ include('ville/_delete_form.html.twig') }}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">Oups ! Aucunes villes trouvées</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                {% endif %}

            </div>
        </div>
    </div>
    <a href="{{ path('ville_new') }}">
        <button class="btn bouton">Créer une ville</button>
    </a>
{% endblock %}
