{% extends 'base.html.twig' %}

{% block title %}Edit Ville{% endblock %}

{% block body %}
    <h1 class="text-muted">Editer une ville </h1>


    {{ form_start(form) }}
    <div class="container-fluid">
        <div class="row">
            <div class="col-6 ">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom) }}
                {{ form_errors(form.nom) }}
                <br>
                {{ form_label(form.codePostal) }}
                {{ form_widget(form.codePostal) }}
                {{ form_errors(form.codePostal) }}

            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <br>
                {{ form_label(form.submit) }}
                {{ form_widget(form.submit) }}
                {{ form_end(form) }}
            </div>
            <div class="col-2">
                <br>
                <a href="{{ path('ville_index') }}">
                    <button class="btn bouton">Retour</button>
                </a>
            </div>
            <div class="col-2">
                <br>
                <form method="post" action="{{ path('ville_delete', {'id': ville.id}) }}"
                      onsubmit="return confirm('ÃŠtes vous sur de vouloir supprimer cette ville ?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ville.id) }}">
                    <button class="btn bouton">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
    </div>

{% endblock %}
