{% extends 'base.html.twig' %}

{% block title %}Nouvelle ville{% endblock %}

{% block body %}
    <h1 class="text-muted">Créer une ville</h1>

    <div class="container-fluid">
        <div class="row">
            <div class="col-6">
    {{ form_start(form) }}

    {{ form_label(form.nom)}}
    {{form_widget(form.nom, {'attr': {'class':'form-control'}})}}
    {{ form_errors(form.nom) }}

    {{ form_label(form.codePostal)}}
    {{form_widget(form.codePostal, {'attr': {'class':'form-control'}})}}
    {{ form_errors(form.codePostal) }}
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-4">
                {{form_widget(form.submit)}}
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <br>
    {# bouton annuler du formulaire principal - creation ville #}
    <div class="col-4">
        <a href="{{ path('ville_index') }}">
            <button class="btn bouton">Retour à la liste</button>
        </a>
    </div>

{% endblock %}
